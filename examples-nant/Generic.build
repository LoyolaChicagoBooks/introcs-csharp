<?xml version="1.0"?>
<project name="Generic COMP 170 NAnt Build File" default="build" basedir=".">

  <description>This is used to build an executable (.exe) for any given example (.cs) file.</description>

  <property name="debug" value="true" overwrite="false"/>
  <property name="build.dir" value="."/>

  <include buildfile="../include/NUnit.include" />

  <target name="clean" description="remove all generated files">
    <delete file="${build.dir}/${program}.exe" failonerror="false"/>
    <delete file="${build.dir}/${program}.exe.pdb" failonerror="false"/>
    <delete file="${build.dir}/${program}.exe.mdb" failonerror="false"/>
  </target>

  <target name="build" description="compiles the source code">
    <csc target="exe" output="${build.dir}/${program}.exe" debug="${debug}">
      <sources>
        <include name="${program}.cs"/>
        <include name="intro_cs_lib/**/*.cs"/>
      </sources>
      <references>
        <include name="${nunit.dir}/**/${nunit.dll}"/>
      </references>
    </csc>
  </target>

</project>
