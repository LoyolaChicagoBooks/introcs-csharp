<?xml version="1.0"?>
<project name="interfaces" default="build" basedir=".">

  <description>NAnt build file for interface examples</description>

  <property name="debug" value="true" overwrite="false"/>
  <property name="build.dir" value="."/>

  <target name="clean" description="remove all generated files">
    <delete>
       <fileset>
          <include name="${build.dir}/**/*.exe"/>
          <include name="${build.dir}/**/*.pdb"/>
          <include name="${build.dir}/**/*.mdb"/>
       </fileset>
    </delete>
  </target>

  <target name="build" description="compiles the source code">
    <mkdir dir="${build.dir}" failonerror="false"/>

    <csc target="exe" output="${build.dir}/test_rational_sort.exe" debug="${debug}">
      <sources>
        <include name="test_rational_sort.cs"/>
        <include name="rational.cs"/>
      </sources>
    </csc>
  </target>
</project>
