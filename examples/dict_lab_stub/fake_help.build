<?xml version="1.0"?>
<project name="GCD" default="build" basedir=".">

  <description>NAnt build file for GCD examples</description>

  <property name="debug" value="true" overwrite="false"/>
  <property name="build.dir" value="."/>

  <target name="clean" description="remove all generated files">
    <delete>
       <fileset>
          <include name="${build.dir}/**/*.exe"/>
          <include name="${build.dir}/**/*.pdb"/>
          <include name="${build.dir}/**/*.mdb"/>
       </fileset>
    </delete>
  </target>

  <target name="build" description="compiles the source code">
    <mkdir dir="${build.dir}" failonerror="false"/>

    <csc target="exe" output="${build.dir}/main_lab.exe" debug="${debug}">
      <sources>
        <include name="main_lab.cs"/>
        <include name="file_util.cs"/>
      </sources>
    </csc>

    <csc target="exe" output="${build.dir}/main_verbose.exe" debug="${debug}">
      <sources>
        <include name="main_verbose.cs"/>
        <include name="file_util.cs"/>
      </sources>
    </csc>

  </target>
</project>
