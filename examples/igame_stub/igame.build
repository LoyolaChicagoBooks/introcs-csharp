<?xml version="1.0"?>
<project name="i_game" default="build" basedir=".">

  <description>NAnt build file for Grade Calculation using File I/O example</description>

  <property name="debug" value="true" overwrite="false"/>
  <property name="build.dir" value="."/>

  <include buildfile="../../include/NUnit.include" />

  <target name="clean" description="remove all generated files">
    <delete>
       <fileset>
          <include name="${build.dir}/**/*.exe"/>
          <include name="${build.dir}/**/*.pdb"/>
          <include name="${build.dir}/**/*.mdb"/>
       </fileset>
    </delete>
  </target>

  <target name="build" description="compiles the source code">
    <mkdir dir="${build.dir}" failonerror="false"/>

    <csc target="exe" output="${build.dir}/play_games.exe" debug="${debug}">
      <sources>
        <include name="play_games.cs"/>
        <include name="i_game.cs"/>
        <include name="addition_game.cs"/>
        <include name="../intro_cs_lib/**/*.cs"/>
      </sources>
      <references>
        <include name="${nunit.dir}/**/${nunit.dll}"/>
      </references>
    </csc>

  </target>
</project>
