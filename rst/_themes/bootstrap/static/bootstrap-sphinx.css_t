html, body {
    height: 100%;
}
body {

}

.wrapper {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -112px; /* Footer height + Footer margin*/
}
.push {
    height: 112px;
}

.wrapper > .container {
	padding-top:50px;
}

.sphinxsidebar {
	margin-left: 0%;
}

div.sphinxsidebarwrapper {
    padding: 0;
}

div.sphinxsidebar {
    margin: 0;
    padding: 0.5em 15px 15px 0;
    width: {{ theme_sidebarwidth|toint - 20 }}px;
    font-size: 1em;
    text-align: left;
}

